<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_10"
    android:background="@color/bgGray2">

    <com.supcon.mes.mbap.view.CustomTextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        app:key_width="120dp"
        app:key_size="12"
        app:key_color="@color/textColorlightblack"
        app:content_size="14"
        android:id="@+id/itemDCSParam"
        android:tag="itemDCSParam"
        />
    <com.supcon.mes.mbap.view.CustomTextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:key_width="30dp"
        app:key_size="10"
        app:content_size="14"
        app:key="上限"
        app:key_color="@color/textColorlightblack"
        android:id="@+id/itemDCSParamMax"
        android:tag="itemDCSParamMax"
        android:layout_toRightOf="@+id/itemDCSParam"
        />
    <com.supcon.mes.mbap.view.CustomTextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:key_width="30dp"
        app:key_size="10"
        app:content_size="14"
        app:key="下限"
        app:key_color="@color/textColorlightblack"
        android:id="@+id/itemDCSParamMin"
        android:tag="itemDCSParamMin"
        android:layout_toRightOf="@+id/itemDCSParamMax"
        />
    <ImageView
        android:id="@+id/itemAreaDot"
        android:tag="itemAreaDot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_dot"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:visibility="gone"
        />
</RelativeLayout>