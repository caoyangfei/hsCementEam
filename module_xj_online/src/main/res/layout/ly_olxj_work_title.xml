<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_10"
    android:background="@color/themeColor"
    android:id="@+id/titleBarLayout"
    android:tag="titleBarLayout">
    >

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/leftBtn"
        android:tag="leftBtn"
        android:visibility="visible"
        android:src="@drawable/sl_top_back"
        android:background="@null"
        android:scaleType="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/titleText"
        android:tag="titleText"
        android:layout_toRightOf="@+id/leftBtn"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginRight="120dp"
        android:gravity="center_vertical" />
    <com.supcon.mes.mbap.view.CustomFilterView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/listDeviceFilter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:tag="listDeviceFilter"
        app:text="设备"
        app:text_color="@color/white"
        app:item_text_color="@color/textColorlightblack"
        app:text_size="14"
        app:position="0"
        app:icon_res="@drawable/ic_choose_white2" />

</RelativeLayout>