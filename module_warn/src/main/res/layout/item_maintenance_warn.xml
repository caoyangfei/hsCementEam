<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceEquipmentNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceEquipmentNameTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="设                备:"
            app:key_width="110dp"
            app:max_lines="2" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceLastDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceLastDateTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="上次维保日期:"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceNextDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceNextDateTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="下次维保日期:"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceAdvanceTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceAdvanceTimeTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="提  前  期  (天):"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceClaimTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:tag="itemMaintenanceClaimTv"
            app:content_hint="--"
            app:gravity="right"
            android:visibility="gone"
            app:key="要                求:"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceContentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceContentTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="right"
            app:key="内                容:"
            app:key_width="110dp"
            app:max_lines="100" />

    </LinearLayout>

</RelativeLayout>
