<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemLubricationOilTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemLubricationOilTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="润\t滑\t油\t:"
            app:key_width="140dp"
            app:max_lines="100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemLubricationChangeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="itemLubricationChangeTv"
                android:textColor="@color/editableTextColor"
                android:textSize="@dimen/fontSize_12sp"
                tools:text="@string/device_style1" />

            <TextView
                android:id="@+id/itemLubricationNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:tag="itemLubricationNumTv"
                android:textColor="@color/editableTextColor"
                android:textSize="@dimen/fontSize_12sp"
                tools:text="@string/device_style1" />
        </LinearLayout>

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemLubricationPartTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemLubricationPartTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="润\t滑\t部\t位\t:"
            app:key_width="140dp"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemLubricationLastDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemLubricationLastDateTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="center"
            app:key="上次润滑日期:"
            app:key_width="140dp"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemLubricationNextDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemLubricationNextDateTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="center"
            app:key="下次润滑日期:"
            app:key_width="140dp"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemLubricationLastDurationTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemLubricationLastDurationTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="center"
            app:key="上次润滑时长:"
            app:key_width="140dp"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemLubricationNextDurationTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemLubricationNextDurationTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="center"
            app:key="下次润滑时长:"
            app:key_width="140dp"
            app:max_lines="100" />

    </LinearLayout>

</RelativeLayout>